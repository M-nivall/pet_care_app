<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Varsani.Clients.InvoiceItems">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"

                    android:orientation="vertical">


                    <Button
                        android:id="@+id/btn_print"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimary"
                        android:text="Print"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />

                    <!-- Booking Details Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_booking_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:paddingBottom="4dp"/>

                            <TextView
                                android:id="@+id/tv_bookingID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking ID"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service: Grooming"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark" />

                            <TextView
                                android:id="@+id/tv_pet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pet: Simba"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"/>

                            <TextView
                                android:id="@+id/tv_booking_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking Date:"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"/>

                            <TextView
                                android:id="@+id/tv_booking_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status: Completed"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:paddingTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Payment info:"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:text="Payment Method:Mpesa"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txv_amount_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Amount: "
                        android:textColor="@color/colorBlack"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txv_payment_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Payment code"
                        android:textColor="@color/colorBlack"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txv_payment_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="Status"
                        android:textColor="@color/colorBlack"
                        android:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />


                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <!-- Rating and Review Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_rating_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate Our Service"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:paddingBottom="8dp"/>

                            <RatingBar
                                android:id="@+id/rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="1.0"
                                android:rating="3.5"
                                android:paddingBottom="8dp"/>

                            <EditText
                                android:id="@+id/edt_review"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Write a review..."
                                android:background="@android:color/darker_gray"
                                android:padding="8dp"
                                android:textSize="14sp"
                                android:minHeight="50dp"
                                android:gravity="top"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="@android:color/darker_gray"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:padding="15dp">

            <Button
                android:id="@+id/btn_mark_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="pay Now"
                android:textColor="@color/colorWhite" />

            <Button
                android:visibility="gone"
                android:id="@+id/btn_mark_delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Confirm Service Completion"
                android:textColor="@color/colorWhite" />
            <Button

                android:id="@+id/btn_mark_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Confirm Service Completion"
                android:textColor="@color/colorWhite" />

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>