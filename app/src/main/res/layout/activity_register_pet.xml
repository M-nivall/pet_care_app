<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Clients.RegisterPet">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Your Pet"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginBottom="12dp" />

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="14dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Pet Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Name"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edtPetName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_bg"
                    android:hint="Enter pet name"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Species -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Species"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/spnSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Breed -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breed"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edtBreed"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_bg"
                    android:hint="Enter breed"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Gender -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>
                <Spinner
                    android:id="@+id/spnGender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_bg"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtDob"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_bg"
                    android:hint="Select date of birth"
                    android:focusable="false"
                    android:padding="10dp"
                    android:layout_marginBottom="12dp"/>


                <!-- Weight -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (kg)"
                    android:textColor="#455A64"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_bg"
                    android:hint="e.g. 4.5"
                    android:padding="10dp"
                    android:layout_marginBottom="18dp"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitPet"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Register Pet"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
